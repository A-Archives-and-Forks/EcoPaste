{
	"build": {
		"beforeDevCommand": "vite",
		"beforeBuildCommand": "vite build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "EcoCopy",
		"version": "../package.json"
	},
	"tauri": {
		"macOSPrivateApi": true,
		"allowlist": {
			"all": true
		},
		"windows": [
			{
				"label": "main",
				"title": "EcoCopy",
				"resizable": false,
				"minWidth": 800,
				"minHeight": 600,
				"center": true,
				"skipTaskbar": true,
				"hiddenTitle": true,
				"maximizable": false,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"windows": {
				"digestAlgorithm": "sha256",
				"wix": {
					"language": "zh-CN"
				},
				"nsis": {
					"languages": ["SimpChinese"]
				}
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true,
			"menuOnLeftClick": false
		}
	}
}
