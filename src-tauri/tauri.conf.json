{
	"build": {
		"beforeDevCommand": "vite",
		"beforeBuildCommand": "vite build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "EcoCopy",
		"version": "../package.json"
	},
	"tauri": {
		"macOSPrivateApi": true,
		"allowlist": {
			"all": true,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"label": "main",
				"title": "EcoCopy",
				"width": 800,
				"height": 600,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
